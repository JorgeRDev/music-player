{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "electron", "types",
    "electron/core/configuration.ts", "lib/readingDirectory.ts", "lib/songMetadataElectron.ts",
    "src/utils/timeFormatting.ts", "lib/music.ts", "lib/musicPlayer.ts", "lib/playbackPositionSlider.ts", "lib/progressBar.ts", "lib/songInfo.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
